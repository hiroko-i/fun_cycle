<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4">
  <% @posts.each do |post| %>
    <div class="col mt-3">
      <div class="card h-100 shadow-lg">
        <%= link_to post_path(post) do %>
          <%= attachment_image_tag post, :image, width: 50, class:"card-img-top img-fluid", fallback:"no_image.jpg" %>
        <% end %>
        <div class="card-body">
          <div class="card-text">
            <div class="d-flex justify-content-between">
              <p class="btn btn-sm btn-secondary text-light"><%= post.genre %></p>
              <p class="text-secondary text-end"><%= l post.created_at %></p>
            </div>
            <p><%= link_to post.title, post_path(post), class:"text-dark fw-bold" %></p>
            <div class="d-flex">
              <p class="text-secondary"><i class="fas fa-map-marker-alt"></i><%= post.prefecture.name %></p>
              <p class="text-secondary ms-3"><%= post.place %></p>
            </div>
            <div>
              <%= attachment_image_tag post.user, :profile_image, size:"30x30", fallback: "no_image.jpg", class:"rounded-circle" %>
              <%= link_to post.user.nickname, user_path(post.user), class:"text-dark" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>