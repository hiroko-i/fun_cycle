<div class="container">
  <h2>ユーザー一覧</h2>
  <div class="row row-col-1 row-col-sm-2 row-col-md-4">
    <% @users.each do |user| %>
      <div class="col">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-5">
                <%= link_to user_path(user) do %>
                  <%= attachment_image_tag user, :profile_image, size:"60x60", fallback: "no_image.jpg", class:"rounded-circle" %>
                <% end %>
              </div>
              <div class="col-7">
                <p class="card-title text-dark">
                  <%= link_to user.nickname, user_path(user) %>
                </p>
              </div>
            </div>
            <div class="row">
              <div class="card-text">
                <div class="text-secondary"><%= user.prefecture.name %></div>
                <div class="text-secondary"><%= user.bicycle_model %></div>
                <div class="text-secondary"><%= user.average_distance %></div>
              </div>
            </div>
            <div class="row">
              <p class="card-text d-inline-block text-truncate" style="max-width: 150px;">
                <%= user.description %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @users %>
</div>