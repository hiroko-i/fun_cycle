<div class="mt-3">
  <h4>コメント投稿</h4>
  <div>
    <%= form_with(model:[@post, @post_comment], remote: true) do |f| %>
      <div>
        <%= f.text_area :comment, rows:'4', class:"form-control" %>
      </div>
      <div class="text-end">
        <%= f.submit "送信", class:'btn btn-outline-secondary mt-3' %>
      </div>
    <% end %>
  </div>
</div>
<div id="comment_index_area">
  <%= render "user/post_comments/index", post: @post%>
</div>