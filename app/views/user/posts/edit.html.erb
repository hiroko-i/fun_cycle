<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 mx-auto">
      <h2 class="my-4 fw-bold">投稿編集</h2>
      <%= form_with model: @post, local:true do |f| %>
        <div class="mb-3">
          <%= f.label :image, "写真", class:"form-label" %><br>
          <%= f.attachment_field :image, class:"form-control-file" %>
        </div>
        <div class="mb-3">
          <%= f.label :title, "タイトル", class:"form-label" %>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :explanation, "説明", class:"form-label" %>
          <%= f.text_area :explanation, rows:"6", class:"form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :prefectur, "都道府県", class:"form-label" %><br>
          <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, {include_blank: "--選択してください--"}, class:"form-select" %>
        </div>
        <div class="mb-3">
          <%= f.label :place, "場所（地域名・道の名前）", class:"form-label" %><br>
          <%= f.text_field :place, class:"form-control", placeholder:"奥多摩、渋峠、多摩川サイクリングロード　等" %>
        </div>
        <div class="mb-3">
          <%= f.label :address, "住所（住所検索して記載してください）", class:"form-label" %>
          <%= f.text_field :address, class:"form-control", placeholder:"東京都世田谷区多摩川○-○" %>
        </div>
        <div class="mb-3">
          <%= f.label :genre, "ジャンル", class:"form-label" %><br>
          <%= f.select :genre, Post.genres.keys, {prompt: "--選択してください--"}, class:"form-select" %>
        </div>
        <div class="mb-3">
          <%= f.label :tag, "タグ (複数のタグは , （半角）で区切ってください)", class:"form-label" %>
          <%= f.text_area :name, rows:"2", value: @tag_list, class:"form-control", placeholder:"サイクルラック,春,峠" %>
        </div>
        <div class="mb-3 d-grid">
          <%= f.submit "変更を保存", class:"btn btn-outline-success" %>
        </div>
      <% end %>
      <div class="mb-3 d-grid">
        <%= link_to "投稿を削除", post_path(@post), method: :delete, class:"btn btn-outline-danger" %>
      </div>
    </div>
  </div>
  <%= render 'user/posts/map' %>
</div>