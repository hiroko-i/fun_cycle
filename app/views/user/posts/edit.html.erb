<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 mx-auto">
      <h2 class="mt-3">サイクルスポット編集</h2>
      <%= form_with model: @post, local:true do |f| %>
        <div class="form-group">
          <%= f.label :image, "写真" %><br>
          <%= f.attachment_field :image, class:"form-control-file" %>
        </div>
        <div class="form-group">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :explanation, "自己紹介" %>
          <%= f.text_area :explanation, rows:"4", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :prefectur, "都道府県" %><br>
          <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, include_blank: "---" %>
        </div>
        <div class="form-group">
          <%= f.label :place, "場所（地域名・道の名前）" %><br>
          <%= f.text_field :place, class:"form-control", placeholder:"奥多摩、渋峠、多摩川サイクリングロード　等" %>
        </div>
        <div class="form-group">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address, class:"form-control", placeholder:"東京都世田谷区多摩川○-○" %>
        </div>
        <div class="form-group">
          <%= f.label :genre, "ジャンル" %><br>
          <%= f.select :gennre, Post.genres.keys, {prompt: "--選択してください--"} %>
        </div>
        <div class="form-group">
          <%= f.label :tag, "タグ(,で区切って複数のタグを投稿してください)" %>
          <%= f.text_field :name, value: @tag_list, class:"form-control", placeholder:"サイクルラック,春,峠" %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class:"btn btn-success" %>
        </div>
      <% end %>
      <div class="btn btn-danger">
        <%= link_to "投稿を削除", post_path(@post), method: :delete %>
      </div>
    </div>
  </div>
</div>